{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "ec2:RunInstances"
      ],
      "Resource": "arn:*:ec2:*:*:instance/*",
      "Effect": "Deny",
      "Condition": {
        "ForAnyValue:StringLike": {
          "ec2:InstanceType": [
            "c1*",
            "c3*",
            "c4*",
            "cc2*",
            "d2*",
            "f1*",
            "g2*",
            "g3*",
            "h1*",
            "i2*",
            "i3*",
            "m1*",
            "m2*",
            "m3*",
            "m4*",
            "p2*",
            "p3*",
            "r3*",
            "r4*",
            "t1*",
            "t2*",
            "x1*"
          ]
        }
      }
    }
  ]
}
